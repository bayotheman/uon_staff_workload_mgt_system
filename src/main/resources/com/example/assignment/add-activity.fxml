    <HBox spacing="10"  alignment="CENTER_LEFT">
        <Label text="Activity Type:" />
        <ComboBox fx:id="activityTypeComboBox" promptText="Select Activity Type" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Description:" />
        <TextField fx:id="descriptionField" promptText="Enter Description" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Duration (hours):" />
        <TextField fx:id="durationField" promptText="Enter Duration (hours)" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Semester:" />
        <ComboBox fx:id="semesterComboBox" promptText="Select Semester" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Number of Instances:" />
        <TextField fx:id="instancesField" promptText="Enter Number of Instances" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Year:" />
        <TextField fx:id="yearField" promptText="Enter Year" />
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit" />
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
    </HBox>

</VBox>
