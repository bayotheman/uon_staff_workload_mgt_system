<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment.ui.controller.AddActivityController" spacing="5" alignment="CENTER" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="5.0" top="0.0"/>
    </padding>

